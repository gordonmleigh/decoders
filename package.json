{
  "name": "@fmtk/decoders",
  "version": "0.5.4",
  "type": "module",
  "repository": "https://github.com/futurematik/decoders",
  "author": "Gordon Leigh <gordon.leigh@futurematik.co.uk>",
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "main": "./lib/cjs/index.js",
  "module": "./lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/cjs/index.js"
    }
  },
  "files": [
    "lib/**/*.js",
    "lib/**/*.d.ts",
    "lib/**/*.map",
    "lib/**/package.json",
    "!lib/**/*.test.*",
    "src/**/*.ts",
    "!src/**/*.test.ts"
  ],
  "scripts": {
    "build": "npm run clean && npm run compile && npm run lint && npm run test && npm run docs",
    "clean": "rm -rf docs/ lib/ *.tsbuildinfo",
    "compile": "npm run index && npm run compile:esm && npm run compile:cjs",
    "compile:cjs": "tsc -p tsconfig.cjs.json && echo '{\"type\":\"commonjs\"}' > lib/cjs/package.json",
    "compile:esm": "tsc",
    "dev:docs": "concurrently --kill-others npm:watch:docs npm:serve:docs",
    "docs": "typedoc",
    "index": "node makeIndex.js",
    "lint": "eslint src/ --ext=ts",
    "serve:docs": "http-server docs/ -o",
    "test": "jest",
    "watch:docs": "onchange src/**/*.ts -i -d 1000 -- npm run docs"
  },
  "devDependencies": {
    "@sucrase/jest-plugin": "^2.2.0",
    "@types/jest": "^26.0.14",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "concurrently": "^5.3.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "http-server": "^14.1.1",
    "jest": "^27.4.5",
    "onchange": "^7.0.2",
    "prettier": "^2.8.7",
    "typedoc": "^0.23.28",
    "typescript": "^4.9.5"
  }
}
