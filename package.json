{
  "name": "@fmtk/decoders",
  "version": "0.4.3",
  "main": "lib/bundle.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "https://github.com/futurematik/decoders",
  "author": "Gordon Leigh <gordon.leigh@futurematik.co.uk>",
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib/**/*.js",
    "lib/**/*.d.ts",
    "lib/**/*.map",
    "!lib/**/*.test.*",
    "src/**/*.ts",
    "!src/**/*.test.ts"
  ],
  "scripts": {
    "build": "yarn clean && yarn compile && yarn test && yarn bundle && yarn docs",
    "bundle": "rollup -c",
    "clean": "rm -rf docs/ lib/ *.tsbuildinfo",
    "compile": "yarn index && tsc",
    "dev:docs": "concurrently --kill-others npm:watch:docs npm:serve:docs",
    "docs": "typedoc",
    "index": "node makeIndex.js",
    "serve:docs": "http-server docs/ -o",
    "test": "jest",
    "watch:docs": "onchange src/**/*.ts -i -d 1000 -- yarn docs"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "http-server": "^0.12.3",
    "jest": "^26.5.0",
    "onchange": "^7.0.2",
    "prettier": "^2.1.2",
    "rollup": "^2.29.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^26.4.1",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.3"
  }
}
