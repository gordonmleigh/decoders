{
  "name": "@gordonmleigh/decoders",
  "version": "0.8.0",
  "type": "module",
  "repository": "https://github.com/gordonmleigh/decoders",
  "author": {
    "name": "Gordon Leigh"
  },
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "main": "./lib/cjs/index.js",
  "module": "./lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/cjs/index.js"
    }
  },
  "files": [
    "lib/**/*.js",
    "lib/**/*.d.ts",
    "lib/**/*.map",
    "lib/**/package.json",
    "!lib/**/*.test.*",
    "src/**/*.ts",
    "!src/**/*.test.ts"
  ],
  "scripts": {
    "build": "npm run clean && npm run compile && npm run lint && npm run test ",
    "clean": "rm -rf docs/ lib/ *.tsbuildinfo",
    "compile": "npm run index && npm run compile:esm && npm run compile:cjs",
    "compile:cjs": "tsc -p tsconfig.cjs.json && echo '{\"type\":\"commonjs\"}' > lib/cjs/package.json",
    "compile:esm": "tsc",
    "index": "node makeIndex.js",
    "lint": "eslint src/ --ext=ts",
    "test": "jest"
  },
  "devDependencies": {
    "@swc/core": "^1.3.51",
    "@swc/jest": "^0.2.26",
    "@types/jest": "^26.0.14",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint": "^8.9.0",
    "jest": "^27.5.1",
    "prettier": "2.8.7",
    "typescript": "^5.0.4"
  }
}
