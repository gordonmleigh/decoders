{
  "name": "@fmtk/decoders",
  "version": "0.4.3",
  "type": "module",
  "types": "lib/index.d.ts",
  "repository": "https://github.com/futurematik/decoders",
  "author": "Gordon Leigh <gordon.leigh@futurematik.co.uk>",
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib/**/*.js",
    "lib/**/*.d.ts",
    "lib/**/*.map",
    "!lib/**/*.test.*",
    "src/**/*.ts",
    "!src/**/*.test.ts"
  ],
  "exports": {
    ".": "./lib/index.ts"
  },
  "scripts": {
    "build": "npm run clean && npm run compile && npm run test && npm run docs",
    "clean": "rm -rf docs/ lib/ *.tsbuildinfo",
    "compile": "npm run index && tsc",
    "dev:docs": "concurrently --kill-others npm:watch:docs npm:serve:docs",
    "docs": "typedoc",
    "index": "node makeIndex.js",
    "serve:docs": "http-server docs/ -o",
    "test": "jest",
    "watch:docs": "onchange src/**/*.ts -i -d 1000 -- npm run docs"
  },
  "devDependencies": {
    "@sucrase/jest-plugin": "^2.2.0",
    "@types/jest": "^26.0.14",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "http-server": "^0.12.3",
    "jest": "^26.5.0",
    "onchange": "^7.0.2",
    "prettier": "^2.1.2",
    "typedoc": "^0.22.11",
    "typescript": "^4.5.5"
  }
}
